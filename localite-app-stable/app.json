{
  "expo": {
    "name": "在地人 AI 導覽",
    "slug": "localite-ai-guide",
    "owner": "cwfu",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo/logo-light.png",
    "userInterfaceStyle": "light",
    "scheme": "localite",
    "splash": {
      "image": "./assets/logo/logo-light.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "bundleIdentifier": "com.localite.app",
      "buildNumber": "1",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "需要相機權限以拍照或掃描景點資訊",
        "NSPhotoLibraryUsageDescription": "需要相簿權限以選擇照片進行AI分析",
        "NSLocationWhenInUseUsageDescription": "需要位置權限以提供附近景點導覽服務",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "需要位置權限以提供個人化導覽服務",
        "NSMicrophoneUsageDescription": "需要麥克風權限以使用語音功能",
        "NSSpeechRecognitionUsageDescription": "需要語音識別權限以提供語音導覽功能",
        "NSMotionUsageDescription": "需要動作感測權限以提供更好的導覽體驗",
        "UIBackgroundModes": [
          "remote-notification",
          "background-fetch",
          "location"
        ],
        "CFBundleDisplayName": "在地人 AI 導覽",
        "CFBundleShortVersionString": "1.0.0"
      },
      "supportsTablet": true,
      "requireFullScreen": false,
      "usesAppleSignIn": false,
      "config": {
        "usesNonExemptEncryption": false
      },
      "entitlements": {
        "com.apple.developer.networking.wifi-info": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo/logo-light.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.localite.app",
      "versionCode": 1,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_BACKGROUND_LOCATION",
        "android.permission.FOREGROUND_SERVICE",
        "android.permission.FOREGROUND_SERVICE_LOCATION"
      ],
      "playStoreUrl": "https://play.google.com/store/apps/details?id=com.localite.app",
      "config": {
        "googleMaps": {
          "apiKey": "your-google-maps-api-key"
        }
      }
    },
    "web": {
      "favicon": "./assets/logo/logo-light.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "44f1e023-b909-4ffc-a5a6-da5ed0ebd599"
      }
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "允許應用程式使用相機拍攝景點照片"
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "允許應用程式取得您的位置以提供個人化導覽服務",
          "locationAlwaysPermission": "允許應用程式在背景取得位置以提供位置相關通知",
          "locationWhenInUsePermission": "允許應用程式取得您的位置以顯示附近景點",
          "isIosBackgroundLocationEnabled": true,
          "isAndroidBackgroundLocationEnabled": true
        }
      ]
    ],
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
